{% extends 'base.html.twig' %}

{% block title %}Categorie #{{ category.id }}{% endblock title %}

{% block body %}
<div>
    <h1 class="mt-0">{{ category.name }}</h1>
    <ul>
        {% for program in programs %}
        <li>
            {{program.id}} / {{program.title}} :<br>
            {{program.synopsis}}
        </li>
        <button class="btn btn-primary">
            <a class="text-secondary" href="{{ path('program_show', { id: program.id }) }}">
                Voir le programme
            </a>
        </button>
        {% endfor %}
    </ul>
</div>
<button class="btn btn-secondary">
    <a href="{{ path('category_index') }}">
        Retour Ã  la liste des programmes
    </a>
</button>
{% endblock body %}