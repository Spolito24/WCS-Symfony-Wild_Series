{% extends 'base.html.twig' %}

{% block title %}{{program.title}}{% endblock title %}

{% block body %}
<div class="text-center">
    <h1 class="">{{ program.title }}</h1>
    <p class="my-2">Synopsis : <br>{{ program.synopsis }}</p>
    <p>Catégorie : {{ program.category.name }}</p>
    <p>Année de sortie : {{ program.year }}</p>
    <p>Pays d'origine : {{ program.country }}</p>
</div>
<div class="d-flex justify-content-center">
    <div class="card bg-primary text-secondary text-center m-2 w-50">
        <h3 class="my-2">Liste des saisons</h3>
        <ul>
            {% for season in program.seasons %}
            <li>
                <a class="text-secondary"
                    href="{{ path('program_season_show', { slug: program.slug , season: season.id})}}">Saison
                    {{season.number}}
                </a>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>
<div class="d-flex justify-content-center">
    <div class="card bg-primary text-secondary text-center m-2 w-50">
        <h3 class="my-2">Liste des acteurs</h3>
        <ul>
            {% for actor in program.actors %}
            <a class="text-secondary" href="{{ path('actor_show', { id: actor.id})}}">
                <li>{{ actor.firstName }} {{ actor.lastName }}</li>
            </a>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock body %}