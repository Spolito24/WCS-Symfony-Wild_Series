{% extends 'base.html.twig' %}

{% block title %}{{program.title}}{% endblock title %}

{% block body %}
<div class="text-center">
    <h1 class="">{{ program.title }}</h1>
    <p class="my-2">Synopsis : <br>{{ program.synopsis }}</p>
    <p>Catégorie : {{ program.category.name }}</p>
    <p>Année de sortie : {{ program.year }}</p>
    <p>Pays d'origine : {{ program.country }}</p>
</div>
<div class="card bg-primary text-secondary w-25 m-2">
    <h3 class="text-center my-2">Liste des saisons</h3>
    <ul>
        {% for season in program.seasons %}
        <li>
            <a class="text-secondary"
                href="{{ path('program_season_show', { program: program.id , season: season.id})}}">
                Saison {{season.number}}
            </a>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock body %}