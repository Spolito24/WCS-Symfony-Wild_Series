{% extends 'base.html.twig' %}

{% block title %}{{season.program.title}} Saison #{{ season.number }}{% endblock title %}

{% block body %}
<h1>Saison {{season.number}} de {{season.program.title}} </h1>
<p>Année de sortie : {{season.year}}</p>
<p>{{season.description}}</p>

<p>Liste des épisodes</p>
<ul>
    {% for episode in season.episodes %}
    <li>Episode {{episode.number}} : <a
            href="{{ path('program_episode_show', { program: season.program.id , season: season.id , episode: episode.id})}}">{{episode.title}}</a>
    </li>
    {% endfor %}
</ul>
{% endblock body %}