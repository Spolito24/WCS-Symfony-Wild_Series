{% extends 'base.html.twig' %}

{% block title %}{{actor.firstname}}_{{actor.lastname}}{% endblock title %}

{% block body %}
<div class="text-center">
    <h1 class="">{{ actor.firstname }} {{actor.lastname}}</h1>
    <p class="my-2">Date de naissance :<br>{{ actor.birthdate|date('Y-m-d') }}</p>
</div>
<div class="d-flex justify-content-center">
    <div class="card bg-primary text-secondary text-center m-2 w-50">
        <h3 class="my-2">Liste des s√©rie</h3>
        <ul>
            {% for program in actor.programs %}
            <li>
                <a class="text-secondary" href="{{ path('program_show', { id: program.id})}}">
                    {{program.title}}
                </a>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock body %}